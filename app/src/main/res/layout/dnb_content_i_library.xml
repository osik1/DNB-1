<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/dnb_homebutton"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/homebutton"
        android:layout_marginHorizontal="330dp"
        android:layout_marginVertical="50dp"
        />

    <TextView
        android:id="@+id/dnb_ILibraryUG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/School_name"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/university_of_ghana"
        android:textStyle="bold"
        android:layout_marginVertical="70dp"
        android:layout_marginHorizontal="80dp"/>


    <ImageView
        android:id="@+id/dnb_IlibraryBackArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/backarrow"
        android:layout_marginVertical="60dp"
        android:layout_marginHorizontal="20dp"
        />


    <TextView
        android:id="@+id/dnb_Ilibrary"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginVertical="120sp"
        android:layout_marginHorizontal="123sp"
        android:text="I- LIBRARY"
        android:textSize="30sp"
        android:textColor="@color/Bean_Red"
        android:textStyle="bold"/>


    <ListView
        android:id="@+id/dnb_libraries"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="200dip"
        android:layout_marginHorizontal="20dip"
        >



    </ListView>

    <ImageView
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_marginVertical="640dip"
        android:layout_marginHorizontal="160sp"
        android:src="@drawable/menu"
        />




</RelativeLayout>